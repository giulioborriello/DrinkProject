<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" >

    <TextView
        android:id="@+id/drinkNameOrderSummary"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="35sp"
        android:text="nome del drink"
        android:textColor="@color/white"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/drinkDescriptionOrderSummary"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_toEndOf="@id/drinkImageOrderSummary"
        android:text="descrizione del drink"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:layout_below="@id/drinkNameOrderSummary" />

    <TextView
        android:id="@+id/total"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:layout_toEndOf="@id/plusDrinkOrderSummaryButton"
        android:layout_below="@id/drinkDescriptionOrderSummary"
        android:layout_marginStart="20dp"
        android:textSize="30sp"
        android:textColor="@color/black"
        android:text="TOT:" />

    <TextView
        android:id="@+id/totalPriceOrderSummary"
        android:text="8$"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_toEndOf="@id/total"
        android:layout_below="@id/drinkDescriptionOrderSummary" />


    <EditText
        android:id="@+id/drinkQuantityOrderSummary"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:layout_below="@id/drinkDescriptionOrderSummary"
        android:layout_toEndOf="@id/minusDrinkOrderSummaryButton"
        android:layout_marginTop="10dp"
        android:text="42"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textAlignment="center"/>

    <Button
        android:id="@+id/plusDrinkOrderSummaryButton"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/blackcross"
        android:layout_toEndOf="@id/drinkQuantityOrderSummary"
        android:layout_below="@id/drinkDescriptionOrderSummary"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/minusDrinkOrderSummaryButton"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/blackminus"
        android:layout_toEndOf="@id/drinkImageOrderSummary"
        android:layout_below="@id/drinkDescriptionOrderSummary"
        android:layout_marginTop="10dp"/>

    <ImageView
        android:id="@+id/drinkImageOrderSummary"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_below="@id/drinkNameOrderSummary"
        android:src="@drawable/spritz"/>

</RelativeLayout>