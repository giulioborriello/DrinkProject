<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/drinkImageOrderSummary"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_below="@+id/drinkNameOrderSummary"
        android:layout_marginStart="20dp"
        android:layout_marginTop="7dp"
        app:srcCompat="@drawable/spritz" />

    <TextView
        android:id="@+id/drinkNameOrderSummary"
        android:layout_width="match_parent"
        android:textSize="35sp"
        android:layout_marginStart="20dp"
        android:text=""
        android:textColor="@color/white"
        android:layout_marginEnd="20dp"
        android:maxLines="1"
        android:layout_marginTop="15dp"
        android:layout_height="50dp"/>

    <TextView
        android:id="@+id/drinkDescriptionOrderSummary"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:text=""
        android:textColor="@color/white"
        android:textSize="15sp"
        android:layout_below="@id/drinkNameOrderSummary"
        android:layout_marginStart="10sp"
        android:layout_marginTop="10sp"
        android:layout_toEndOf="@id/drinkImageOrderSummary" />

    <TextView
        android:id="@+id/drinkPriceOrderSummary"
        android:layout_width="90dp"
        android:layout_height="match_parent"
        android:layout_below="@id/drinkDescriptionOrderSummary"
        android:layout_toEndOf="@id/drinkImageOrderSummary"
        android:layout_marginTop="10sp"
        android:textAlignment="center"
        android:textSize="30sp"
        android:text=""
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/tipsToTotal"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_below="@id/drinkDescriptionOrderSummary"
        android:layout_toRightOf="@id/drinkPriceOrderSummary"
        android:layout_marginTop="10dp"
        android:text="@string/drimk_view_summary_tip"
        android:textSize="20sp"
        android:textAlignment="center"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/numberOfThisDrinkInTheCart"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/tipsToTotal"
        android:layout_below="@id/drinkDescriptionOrderSummary"
        android:layout_marginTop="10dp" />




</RelativeLayout>